@model IEnumerable<WebCommerce.Models.ViewModels.ProductViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product List</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-4">
        <h1>Product List</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Product.ProductName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Product.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Product.ProductPrice)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Product.Category.CategoryName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Product.ImageURL)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Product.ProductName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Product.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Product.ProductPrice)</td>
                        <td>@Html.DisplayFor(modelItem => item.Product.Category.CategoryName)</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Product.ImageURL))
                            {
                                <img src="@item.Product.ImageURL" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
                            }
                            else
                            {
                                <p>No image</p>
                            }
                        </td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Product.ProductID">Edit</a> |
                            <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.Product.ProductID">Details</a> |
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Product.ProductID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p>
            <a class="btn btn-primary" asp-action="Create">Create New</a>
        </p>
        <a class="btn btn-secondary" asp-area="Customer" asp-controller="Home" asp-action="Index">Back to List</a>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
