@model WebCommerce.Models.Category

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-center">Create Category</h1>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DisplayOrder" class="control-label"></label>
                    <input asp-for="DisplayOrder" class="form-control" type="number" placeholder="Enter display order" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                </div>
            </form>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
            </div>
        </div>
    </div>
</div>
<style>
    /* Add these styles in your CSS file */

    .container {
        margin-top: 20px;
    }

    .text-center {
        text-align: center;
    }

    .btn-lg {
        padding: 10px 20px;
        font-size: 18px;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

</style>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
